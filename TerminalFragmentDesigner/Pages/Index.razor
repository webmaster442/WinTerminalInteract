@page "/"

<div class="min-h-full">
    <header class="bg-white shadow">
        <div class="mx-auto max-w-7xl py-6 px-4 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold tracking-tight text-gray-900">Windows Terminal Fragment Designer</h1>
        </div>
    </header>

    <main class="grid grid-cols-2 gap-16">
        <div class="mx-8">
            <TerminalWindow Theme="@Theme" Profile="@Profile" />
        </div>
        <div>
            <details open>
                <summary>Fonts</summary>
            </details>
            <details open>
                <summary>Backgound image</summary>
            </details>
            <details open>
                <summary>Colors</summary>
            </details>
        </div>
    </main>
</div>


